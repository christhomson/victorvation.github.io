extends layout

block content
  include author
  each article in articles
    article.article.intro
      header
        p.date
          span= moment.utc(article.date).format('DD MMMM YYYY')
        h2
          a(href=article.url).internal= article.title
      section.content !{ typogr(article.intro).typogrify() }
        if article.hasMore
          p.more
            a(href=article.url).more more

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url).nav.internal « Newer
    else
      a(href='/blog/archive.html').nav.internal « Archives
    if nextPage
      a(href=nextPage.url).nav.internal Next page »



